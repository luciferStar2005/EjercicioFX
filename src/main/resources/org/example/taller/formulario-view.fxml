<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.taller.FormularioController"
            stylesheets="@../estilos/formulario.css">
    <BorderPane>
        <top>
            <VBox styleClass="titulo">
                <Label text="Captura de cliente"/>
            </VBox>
        </top>
        <center>
            <StackPane>
                <VBox styleClass="form">
                    <VBox>
                        <TextField promptText="ID" fx:id="id"/>
                        <Label text="" fx:id="numero" visible="false" managed="false"/>
                    </VBox>
                    <VBox>
                        <TextField promptText="Nombre" fx:id="nombreField"/>
                        <Label text=" " fx:id="campo1" visible="false" managed="false"/>
                    </VBox>
                    <VBox>
                        <TextField promptText="Direccion" fx:id="direccionField"/>
                        <Label text="" fx:id="campo2" managed="false" visible="false"/>
                    </VBox>
                    <VBox>
                        <TextField promptText="E-mail" fx:id="correoField"/>
                        <Label text="" fx:id="campo3" managed="false" visible="false"/>
                    </VBox>

                    <HBox styleClass="buttonbar">
                        <Button text="Ingresar" onAction="#ingresar"/>
                        <Button text="Actualizar"/>
                    </HBox>
                    <Label text="" managed="false" visible="false" fx:id="status"/>
                </VBox>
            </StackPane>
        </center>

    </BorderPane>
</StackPane>
