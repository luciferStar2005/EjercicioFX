<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.taller.HelloController"
            stylesheets="@../estilos/formulario.css">
    <BorderPane>
        <top>
            <VBox styleClass="titulo">
                <Label text="Captura de cliente"/>
            </VBox>
        </top>
        <center>
            <StackPane>
                <VBox styleClass="form">
                    <TextField promptText="ID" fx:id="id"/>
                    <TextField promptText="Nombre"/>
                    <TextField promptText="Direccion"/>
                    <TextField promptText="E-mail"/>
                    <HBox styleClass="buttonbar">
                        <Button text="Ingresar"/>
                        <Button text="Actualizar"/>
                    </HBox>
                </VBox>
            </StackPane>
        </center>

    </BorderPane>
</StackPane>
